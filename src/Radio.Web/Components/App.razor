@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=1920, height=576, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <base href="/" />
  <title>Radio Console</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
  <link href="css/custom-theme.css" rel="stylesheet" />
  <HeadOutlet />
</head>

<body>
  <MudThemeProvider Theme="@_customTheme" IsDarkMode="true" />
  <MudPopoverProvider />
  <MudDialogProvider />
  <MudSnackbarProvider />
  
  @Body
  
  <script src="_framework/blazor.web.js"></script>
  <script src="_content/MudBlazor/MudBlazor.min.js"></script>
</body>

</html>

@code {
  private readonly MudTheme _customTheme = new()
  {
    PaletteLight = new PaletteLight()
    {
      Primary = "#5CD4E8", // Electric cyan
      Secondary = "#404045", // Dark slate
      Background = "#2D2D30", // Deep charcoal
      Surface = "#404045", // Dark slate
      AppbarBackground = "#1E1E20", // Darker charcoal
    },
    PaletteDark = new PaletteDark()
    {
      Primary = "#5CD4E8", // Electric cyan
      Secondary = "#404045", // Dark slate
      Background = "#2D2D30", // Deep charcoal
      Surface = "#404045", // Dark slate
      AppbarBackground = "#1E1E20", // Darker charcoal
      TextPrimary = "#F2F2F2", // Near white
      TextSecondary = "#BFBFC2", // Light gray
      Tertiary = "#8C8C8F", // Medium gray
    }
  };
}
